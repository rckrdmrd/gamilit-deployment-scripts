# ============================================================================
# GAMILIT Platform - Development Environment Variables
# ============================================================================
# This file contains example configuration for DEVELOPMENT environment
# Copy this file to .env.dev and configure with your actual values
#
# SECURITY WARNING: Never commit .env files with actual credentials to git!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Information
# ----------------------------------------------------------------------------
APP_NAME=GAMILIT Platform
APP_VERSION=1.0.0
APP_ENV=development

# ----------------------------------------------------------------------------
# Backend Server Configuration
# ----------------------------------------------------------------------------
PORT=3006
NODE_ENV=development
BACKEND_HOST=0.0.0.0

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
# These values will be auto-generated by setup script
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamilit_platform
DB_USER=gamilit_user
DB_PASSWORD=AUTO_GENERATED_BY_SETUP_SCRIPT

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false
DB_CONNECTION_TIMEOUT=10000

# ----------------------------------------------------------------------------
# JWT Authentication Configuration
# ----------------------------------------------------------------------------
# CRITICAL: These will be auto-generated by setup script!
JWT_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_REFRESH_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT

# ----------------------------------------------------------------------------
# Security & Password Hashing
# ----------------------------------------------------------------------------
BCRYPT_ROUNDS=10

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3005
CORS_CREDENTIALS=true

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=combined

# ----------------------------------------------------------------------------
# Frontend (Vite) Configuration
# ----------------------------------------------------------------------------
VITE_APP_NAME=GAMILIT Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Frontend API Configuration
VITE_API_URL=http://localhost:3006/api
VITE_API_TIMEOUT=30000

# Frontend Authentication
VITE_JWT_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT
VITE_JWT_EXPIRATION=7d

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_SOCIAL_FEATURES=true
VITE_ENABLE_ANALYTICS=true

# ----------------------------------------------------------------------------
# External Services (Optional)
# ----------------------------------------------------------------------------
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
VITE_ENABLE_DEBUG=true
VITE_MOCK_API=false

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=gamilit
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
