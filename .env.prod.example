# ============================================================================
# GAMILIT Platform - Production Environment Variables
# ============================================================================
# This file contains example configuration for PRODUCTION environment
# Copy this file to .env.prod and configure with your actual values
#
# SECURITY WARNING: Never commit .env files with actual credentials to git!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Information
# ----------------------------------------------------------------------------
APP_NAME=GAMILIT Platform
APP_VERSION=1.0.0
APP_ENV=production

# ----------------------------------------------------------------------------
# Backend Server Configuration
# ----------------------------------------------------------------------------
PORT=3006
NODE_ENV=production
BACKEND_HOST=0.0.0.0

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
# These values will be auto-generated by setup script
# For production, you may want to use external database service
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamilit_platform
DB_USER=gamilit_user
DB_PASSWORD=AUTO_GENERATED_BY_SETUP_SCRIPT

# Database Connection Pool (increased for production)
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=true
DB_CONNECTION_TIMEOUT=10000

# ----------------------------------------------------------------------------
# JWT Authentication Configuration
# ----------------------------------------------------------------------------
# CRITICAL: These will be auto-generated by setup script!
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_REFRESH_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT

# ----------------------------------------------------------------------------
# Security & Password Hashing
# ----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# IMPORTANT: Update with your production domain!
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true

# ----------------------------------------------------------------------------
# Rate Limiting (stricter for production)
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ----------------------------------------------------------------------------
# Frontend (Vite) Configuration
# ----------------------------------------------------------------------------
VITE_APP_NAME=GAMILIT Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Frontend API Configuration
# IMPORTANT: Update with your production API URL!
VITE_API_URL=https://api.your-production-domain.com/api
VITE_API_TIMEOUT=30000

# Frontend Authentication
VITE_JWT_SECRET=AUTO_GENERATED_BY_SETUP_SCRIPT
VITE_JWT_EXPIRATION=7d

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_SOCIAL_FEATURES=true
VITE_ENABLE_ANALYTICS=true

# ----------------------------------------------------------------------------
# External Services (Configure for production)
# ----------------------------------------------------------------------------
VITE_GOOGLE_ANALYTICS_ID=YOUR_GA_ID_HERE
VITE_SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# ----------------------------------------------------------------------------
# Development Tools (Disabled in production)
# ----------------------------------------------------------------------------
VITE_ENABLE_DEBUG=false
VITE_MOCK_API=false

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=gamilit-prod
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ----------------------------------------------------------------------------
# PRODUCTION SECURITY CHECKLIST
# ----------------------------------------------------------------------------
# Before deploying to production, ensure you:
# ✓ Changed all AUTO_GENERATED_BY_SETUP_SCRIPT values
# ✓ Generated strong JWT_SECRET (openssl rand -base64 32)
# ✓ Use secure database password (at least 32 chars, mixed case, numbers, symbols)
# ✓ Set NODE_ENV=production
# ✓ Disabled debug flags (VITE_ENABLE_DEBUG=false)
# ✓ Configured SSL/TLS (DB_SSL=true)
# ✓ Updated CORS_ORIGIN to your production domain
# ✓ Set appropriate rate limits
# ✓ Configured external services (analytics, monitoring)
# ✓ Reviewed and adjusted pool sizes based on expected load
# ✓ Set up proper SSL certificates
# ✓ Configured firewall rules
# ✓ Set up automated backups
# ✓ Configured monitoring and alerting
